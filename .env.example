# WarehouseAI 环境变量配置示例
# 复制此文件为 .env 并填写实际值

# 前端配置
VITE_API_URL=http://localhost:8001/api
VITE_WS_URL=ws://localhost:8001
VITE_AI_API_KEY=your-openai-api-key-here

# 后端配置

# 数据库配置
# 开发环境（本地 SQLite）
# DATABASE_URL=sqlite:///./warehouse.db
# 生产环境（阿里云 RDS MySQL）
DATABASE_URL=mysql+pymysql://username:password@host:3306/database_name

# JWT 安全配置
# ⚠️ 重要：请使用强随机密钥，生成方法：openssl rand -hex 32
SECRET_KEY=请替换为强随机密钥
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 配置
# 开发环境
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173","http://localhost:8003","http://127.0.0.1:8003"]
# 生产环境（请替换为实际域名）
# BACKEND_CORS_ORIGINS=["https://your-domain.com","https://www.your-domain.com"]

# 环境标识
ENVIRONMENT=development
DEBUG=True

# AI 服务配置（可选）
OPENAI_API_KEY=sk-your-openai-api-key
RAG_ENABLED=false

# Redis 配置（可选，用于缓存和任务队列）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 邮件服务配置（可选，用于通知）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# 短信服务配置（可选）
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# 文件上传配置
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
